<% provide :title, t("sign_in") %>

<h1> <%= t ".page_header" %> </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label t("flb_email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t("flb_password") %>
      <%= link_to t(".forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label t("flb_remember_me"), class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span> <%= t ".ct_3" %> </span>
      <% end %>

      <%= f.submit t("login_btn"), class: "btn btn-primary" %>
    <% end %>

    <p> <%= t ".ct_1" %> <%= link_to t(".ct_2"), signup_path %></p>
  </div>
</div>
